{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "dist",
        "sourceMap": true,
        "removeComments": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}